---
import MainLayout from "../layouts/MainLayout.astro";
import contactData from "../data/contact-data.json";
---

<MainLayout title="Portfolio - Contact" namespace="contact">
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center px-6 pt-20">
    <div class="max-w-6xl mx-auto w-full">
      <div class="text-center mb-16">
        <h1 class="text-6xl md:text-7xl font-bold mb-6 fade-in">
          <span
            class="bg-gradient-to-r from-orange-400 to-pink-600 bg-clip-text text-transparent"
          >
            {contactData.hero.title}
          </span>
        </h1>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Right: Contact Info -->
        <div class="space-y-6">
          <div class="fade-in">
            <h2 class="text-3xl font-bold mb-6">{contactData.info.email}</h2>
          </div>

          <div class="space-y-4">
            {
              contactData.info.contacts.map((info) => (
                <a
                  href={info.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block p-6 bg-white/5 backdrop-blur-sm rounded-2xl border border-white/10 hover:border-orange-400/50 transition-all duration-300 group fade-in"
                >
                  <div class="flex items-center gap-4">
                    <div>
                      <p class="text-sm text-gray-400">{info.label}</p>
                    </div>
                  </div>
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
