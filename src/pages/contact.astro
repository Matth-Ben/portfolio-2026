import MainLayout from '../layouts/MainLayout.astro';

const contactInfo = [
  { label: 'Email', value: 'hello@portfolio.dev', icon: 'üìß', link: 'mailto:hello@portfolio.dev' },
  { label: 'LinkedIn', value: '/in/portfolio', icon: 'üíº', link: 'https://linkedin.com' },
  { label: 'GitHub', value: '@portfolio', icon: 'üêô', link: 'https://github.com' },
  { label: 'Twitter', value: '@portfolio', icon: 'üê¶', link: 'https://twitter.com' },
];
---

<MainLayout title="Portfolio - Contact" namespace="contact">
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center px-6 pt-20">
    <div class="max-w-6xl mx-auto w-full">
      <div class="text-center mb-16">
        <h1 class="text-6xl md:text-7xl font-bold mb-6 fade-in">
          <span class="bg-gradient-to-r from-orange-400 to-pink-600 bg-clip-text text-transparent">
            Contactez-moi
          </span>
        </h1>
        <p class="text-xl text-gray-400 fade-in">
          Une id√©e de projet ? Discutons-en ensemble
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Left: Contact Form -->
        <div class="fade-in">
          <div class="p-8 bg-white/5 backdrop-blur-sm rounded-3xl border border-white/10">
            <h2 class="text-3xl font-bold mb-6">Envoyez un message</h2>
            <form class="space-y-6" id="contact-form">
              <div>
                <label for="name" class="block text-sm font-semibold mb-2 text-gray-300">Nom</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name"
                  class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-xl focus:outline-none focus:border-orange-400 transition-colors text-white"
                  placeholder="Votre nom"
                  required
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-semibold mb-2 text-gray-300">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-xl focus:outline-none focus:border-orange-400 transition-colors text-white"
                  placeholder="votre@email.com"
                  required
                />
              </div>
              <div>
                <label for="subject" class="block text-sm font-semibold mb-2 text-gray-300">Sujet</label>
                <input 
                  type="text" 
                  id="subject" 
                  name="subject"
                  class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-xl focus:outline-none focus:border-orange-400 transition-colors text-white"
                  placeholder="Sujet du message"
                  required
                />
              </div>
              <div>
                <label for="message" class="block text-sm font-semibold mb-2 text-gray-300">Message</label>
                <textarea 
                  id="message" 
                  name="message"
                  rows="5"
                  class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-xl focus:outline-none focus:border-orange-400 transition-colors text-white resize-none"
                  placeholder="Votre message..."
                  required
                ></textarea>
              </div>
              <button 
                type="submit"
                class="w-full px-8 py-4 bg-gradient-to-r from-orange-600 to-pink-600 rounded-full font-semibold hover:scale-105 transition-transform duration-300"
              >
                Envoyer le message
              </button>
            </form>
          </div>
        </div>

        <!-- Right: Contact Info -->
        <div class="space-y-6">
          <div class="fade-in">
            <h2 class="text-3xl font-bold mb-6">Informations de contact</h2>
            <p class="text-gray-300 leading-relaxed mb-8">
              N'h√©sitez pas √† me contacter pour discuter de votre projet, poser des questions 
              ou simplement √©changer sur le d√©veloppement web et le creative coding.
            </p>
          </div>

          <div class="space-y-4">
            {contactInfo.map((info) => (
              <a 
                href={info.link}
                target="_blank"
                rel="noopener noreferrer"
                class="block p-6 bg-white/5 backdrop-blur-sm rounded-2xl border border-white/10 hover:border-orange-400/50 transition-all duration-300 group fade-in"
              >
                <div class="flex items-center gap-4">
                  <span class="text-4xl">{info.icon}</span>
                  <div>
                    <p class="text-sm text-gray-400">{info.label}</p>
                    <p class="text-lg font-semibold group-hover:text-orange-400 transition-colors">
                      {info.value}
                    </p>
                  </div>
                </div>
              </a>
            ))}
          </div>

          <div class="p-8 bg-gradient-to-br from-orange-900/30 to-pink-900/30 backdrop-blur-sm rounded-3xl border border-white/10 fade-in">
            <h3 class="text-2xl font-bold mb-3">Disponibilit√©</h3>
            <p class="text-gray-300">
              Actuellement disponible pour des projets freelance et collaborations.
            </p>
            <div class="mt-4 flex items-center gap-2">
              <span class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></span>
              <span class="text-green-400 font-semibold">Disponible</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

