---
interface Props {
  title: string;
  namespace: string;
}

const { title, namespace } = Astro.props;

// Import CSS files - Astro will handle bundling and correct paths
import "../styles/global.css";
import "../styles/text-animation-debugger.css";
import "../styles/loader.css";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Preload critical fonts -->
    <link
      rel="preload"
      href="/fonts/cinderblock-100.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>
  <body class="bg-[#232323] text-[#EAE8DE] uppercase">
    <!-- Page loader overlay -->
    <div class="page-loader" id="page-loader"></div>
    <div data-barba="wrapper">
      <!-- Container Barba pour le contenu des pages -->
      <main
        class="relative min-h-screen"
        data-barba="container"
        data-barba-namespace={namespace}
      >
        <slot />

        <svg style="display:none;">
          <filter id="noiseFilter">
            <feTurbulence 
              type="fractalNoise" 
              baseFrequency="0.4" 
              numOctaves="1" 
              stitchTiles="stitch" />
            <feColorMatrix type="saturate" values="0"/>
          </filter>
        </svg>

        <div class="grain-overlay"></div>

        <!-- Hidden data for state restoration -->
        <div
          id="home-projects-data"
          data-home-projects={JSON.stringify([
            {
              title: "Le Théâtre Chaillot",
              slug: "chaillot",
              image:
                "/images/chaillot/e242fbc5805242d87b1ede75387c2de2d13c0fbd_3908f48bc3.png",
            },
            {
              title: "La Maison de la Musique de Nanterre",
              slug: "mmn",
              image:
                "/images/mmn/4c1f8b62082f71522a953fd320b98f507884257a_00e7ba5f85.png",
            },
            {
              title: "Margot Jollit",
              slug: "margot-jollit",
              image:
                "/images/margot/b2408c99c0ca5d53ad9d1107998b752bc0a4dc6a_422be1343e.jpg",
            },
            {
              title: "IFCV",
              slug: "ifcv",
              image:
                "/images/chaillot/e242fbc5805242d87b1ede75387c2de2d13c0fbd_3908f48bc3.png",
            },
            {
              title: "Transbordeur",
              slug: "transbordeur",
              image:
                "/images/mmn/4c1f8b62082f71522a953fd320b98f507884257a_00e7ba5f85.png",
            },
            {
              title: "SGH",
              slug: "sgh",
              image:
                "/images/margot/b2408c99c0ca5d53ad9d1107998b752bc0a4dc6a_422be1343e.jpg",
            },
            {
              title: "Musée de la Plaisance",
              slug: "musee-plaisance",
              image:
                "/images/chaillot/e242fbc5805242d87b1ede75387c2de2d13c0fbd_3908f48bc3.png",
